#!/bin/bash
HOME=$PWD
PLUGIN_NAME=$1
PLUGIN_SRC_FOLDER=$HOME/parts/rabbitmq/plugins-src/$PLUGIN_NAME
PLUGIN_FOLDER=$HOME/parts/rabbitmq/plugins
COMPILED_PLUGIN_NAME=${PLUGIN_NAME//-/_}

cd $PLUGIN_SRC_FOLDER
make
cd dist
COMPILED_PLUGIN_FILE=`ls $COMPILED_PLUGIN_NAME-*`

rm -f $PLUGIN_FOLDER/$COMPILED_PLUGIN_NAME-.*
cp $PLUGIN_SRC_FOLDER/dist/$COMPILED_PLUGIN_FILE $PLUGIN_FOLDER/

